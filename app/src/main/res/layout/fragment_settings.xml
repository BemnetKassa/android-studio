<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/background_color">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/text_primary"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <!-- Settings options will be added here later -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="App settings will be displayed here..."
        android:textSize="16sp"
        android:textColor="@color/text_secondary"
        android:gravity="center"
        android:layout_marginTop="32dp" />
    <!-- Add this inside your fragment_settings.xml layout -->
    <Button
        android:id="@+id/btn_reset_progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Reset All Progress"
        android:layout_margin="16dp"
        android:backgroundTint="@color/accent_color"
        android:textColor="@android:color/white" />

</LinearLayout>