<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_background"
    android:orientation="vertical">

    <!-- Chapter Header -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="6dp"
        app:cardBackgroundColor="@color/primary_color">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:id="@+id/tvChapterTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chapter Title"
                android:textColor="@color/text_white"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvChapterDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chapter description"
                android:textColor="@color/text_white"
                android:textSize="16sp"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/tvChapterAim"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Learning objectives..."
                android:textColor="@color/text_white"
                android:textSize="14sp"
                android:layout_marginTop="12dp"
                android:textStyle="italic" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Lessons Header -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lessons in this Chapter"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/primary_text"
        android:paddingStart="24dp"
        android:paddingTop="16dp"
        android:paddingBottom="8dp" />

    <!-- Lessons List -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewLessons"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16px"
        android:clipToPadding="false" />

</LinearLayout>