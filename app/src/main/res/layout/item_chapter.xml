<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="6dp"
    app:cardBackgroundColor="@color/card_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20dp"
        android:background="@drawable/chapter_item_gradient">

        <!-- Chapter Icon -->
        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/chapter_icon_circle"
            android:gravity="center">

            <TextView
                android:id="@+id/tvChapterNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/text_white" />

        </LinearLayout>

        <!-- Chapter Content -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="16dp">

            <TextView
                android:id="@+id/tvChapterTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chapter Title"
                android:textColor="@color/primary_text"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvChapterDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chapter description here"
                android:textColor="@color/secondary_text"
                android:textSize="14sp"
                android:layout_marginTop="4dp" />

            <!-- Progress Bar -->
            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:layout_marginTop="12dp"
                android:progress="50"
                android:progressTint="@color/success_color"
                android:progressBackgroundTint="@color/light_background" />

            <TextView
                android:id="@+id/tvProgressText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="50% Complete"
                android:textSize="12sp"
                android:textColor="@color/success_color"
                android:layout_marginTop="4dp" />

        </LinearLayout>

        <!-- Chevron -->
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_chevron_right"
            android:tint="@color/primary_color" />

    </LinearLayout>

</androidx.cardview.widget.CardView>