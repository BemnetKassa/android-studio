<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="6dp"
    app:cardBackgroundColor="@color/card_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:background="@drawable/chapter_item_gradient">

        <!-- Chapter Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Chapter Icon -->
            <LinearLayout
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/chapter_icon_circle"
                android:gravity="center">

                <TextView
                    android:id="@+id/tvChapterNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_white" />

            </LinearLayout>

            <!-- Chapter Title -->
            <TextView
                android:id="@+id/chapterTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="16dp"
                android:text="Chapter Title"
                android:textColor="@color/primary_text"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- Progress Bar -->
        <ProgressBar
            android:id="@+id/chapterProgressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:layout_marginTop="12dp"
            android:progress="50"
            android:progressTint="@color/success_color"
            android:progressBackgroundTint="@color/light_background" />

        <!-- Progress and Lessons Info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8px">

            <TextView
                android:id="@+id/progressText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="50%"
                android:textSize="14sp"
                android:textColor="@color/success_color" />

            <TextView
                android:id="@+id/lessonsCompletedText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0/0 lessons"
                android:textSize="14sp"
                android:textColor="@color/secondary_text" />

        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>