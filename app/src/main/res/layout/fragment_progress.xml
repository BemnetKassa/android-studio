<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_background"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Overall Progress Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="@color/success_color">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Overall Progress"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_white" />

                <ProgressBar
                    android:id="@+id/overallProgressBar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp"
                    android:progress="0"
                    android:progressTint="@color/accent_color" />

                <TextView
                    android:id="@+id/overallProgressText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Overall Progress: 0%"
                    android:textSize="16sp"
                    android:textColor="@color/text_white"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/achievementsCountText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Achievements: 0/10"
                    android:textSize="14sp"
                    android:textColor="@color/text_white" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Chapter Progress Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chapter Progress"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/primary_text"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="8dp" />

        <!-- Chapter Progress List -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/progressRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</ScrollView>