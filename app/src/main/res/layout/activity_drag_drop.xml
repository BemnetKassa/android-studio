<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:padding="16dp">

    <!-- Section 1: Draggable Items (Anchored to the Top) -->
    <LinearLayout
        android:id="@+id/drag_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:minHeight="70dp"
        android:orientation="horizontal">
        <!-- Draggable image views will be added dynamically here -->
    </LinearLayout>

    <!-- Section 3: Check Button and Result (Anchored to the Bottom) -->
    <LinearLayout
        android:id="@+id/footer_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingTop="16dp">

        <TextView
            android:id="@+id/tv_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:gravity="center"
            android:text=""
            android:textColor="@color/primary_color"
            android:textSize="19sp"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_check"
            style="@style/ButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Check Answers" />
    </LinearLayout>

    <!-- Section 2: Drop Targets (Fills the space between top and bottom) -->
    <LinearLayout
        android:id="@+id/drop_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/footer_section"
        android:layout_below="@id/drag_container"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:orientation="vertical">
        <!-- The new "Question + Drop Zone" layouts will be added dynamically here -->
    </LinearLayout>

</RelativeLayout>
